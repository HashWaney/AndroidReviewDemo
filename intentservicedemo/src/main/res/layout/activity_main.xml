<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hash.intentservicedemo.MainActivity">

    <Button
        android:id="@+id/click1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启一个IntentService"
        android:textAllCaps="false" />

    <Button
        android:layout_width="wrap_content"
        android:textAllCaps="false"
        android:text="播放背景音乐"
        android:id="@+id/click2"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/click3"
        android:text="停止播放"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/click4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定一个服务"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/click5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解绑一个服务"
        android:textAllCaps="false" />

    <Button
        android:layout_width="wrap_content"
        android:text="发送静态广播"
        android:id="@+id/click6"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="发送动态广播"
        android:id="@+id/click7"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="80dp"
        android:id="@+id/showImg"
        android:layout_height="80dp" />



</LinearLayout>
